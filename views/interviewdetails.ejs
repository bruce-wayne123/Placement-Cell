<link rel="stylesheet" type="text/css" href="/assets/css/interviewdetails.css">

<div id="container">
    <div id="interview-list-container">
        <div id="headerLabelContainer" class="row">
            <div class="col-4">
                Company Name
            </div>
            <div class="col-4">
                Position
            </div>
            <div class="col-4">
                Interview Date and time
            </div>
        </div>

        <% for(interview of interviews){ %>
    <div class="row dataContainer" style="margin:10px">
        <div class="col-4">         
                 <%= interview.companyName %>
        </div>
        <div class="col-4">
            <%= interview.position %>
        </div>
        <div class="col-4">
            <%= interview.interviewDate %>
        </div>
    </div>
        <%} %>
        <h3 id="interviewLabel">Interview Results</h3>
        <% for(student of interview.student){ %>
            <div id="studentsContainer">
                <div id="studentDetailsContainer"> 
                    <label><%= student.name %></label>
                    <select name="position" id="<%= student._id %>" required>
                        <option value="Pass">Pass</option>
                        <option value="Fail">Fail</option>
                        <option value="On hold">On hold</option>
                        <option value="Didn’t Attempt">Didn’t Attempt</option>
                    </select></div>    
           
             </div>
            <%} %>
</div>
 <button id="updateButton" type="button" onclick="UpdateDetails()" class="btn btn-primary">Update details</button>
</div>

<script src="/assets/js/interviewdetails.js" type='text/javascript'></script>